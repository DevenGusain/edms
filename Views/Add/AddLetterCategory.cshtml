@{
    ViewData["Title"] = "Add Letter Category";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<script src="~/js/jquery-3.6.4.js"></script>

<script src="~/js/add.js"></script>

<div class="pagetitle">
    <h1>Add Elements</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item">Add</li>
            <li class="breadcrumb-item active">Elements</li>
        </ol>
    </nav>
</div><!-- End Page Title -->




<section class="section">
    <div class="row">
        <div class="col-lg-10">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add Letter Category</h5>

                    <!-- General Form Elements -->

                    <form>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Existing Letter Category</label>
                            <div class="col-sm-10">
                                <select class="form-select" aria-label="Default select example" id="lt_category">
                                    
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Add Category</label>
                            <div class="col-sm-10">
                                <input id="lt_cat" type="text" class="form-control" required>
                            </div>
                        </div>

                         <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Order Number </label>
                            <div class="col-sm-10">
                                <input id="ord_num" type="text" class="form-control" >
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Submit Button</label>
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary" id="submit">Add Category</button>
                            </div>
                        </div>

                        <div id="lt_cat_partialView" class="row mb-3">

                        </div>



                    </form>
                    
                    <!-- End General Form Elements -->


                   

                </div>
            </div>
        </div>
    </div>
</section>
                   